---
import { parseComponent } from "@selleo/core";
import CodeWithCopy from "./CodeWithCopy.astro";
const { component: Component, ...props } = Astro.props;
const { HTMLString, ReactString } = parseComponent(Component, props);
---

<div class="preview">
  <h3 class="font-bold leading-none text-lg">Preview - {name}</h3>

  <div class="my-2">
    <Component {...props} />
  </div>

  <h6>HTML</h6>
  <CodeWithCopy code={HTMLString} lang="html" theme="dark-plus" />

  <h6>React</h6>
  <CodeWithCopy code={ReactString} lang="tsx" theme="dark-plus" />
</div>
